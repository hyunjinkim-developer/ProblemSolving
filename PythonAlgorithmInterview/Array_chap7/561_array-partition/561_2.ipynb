   "source": [
    "# min of each pair are located in even number index\n",
    "\n",
    "class Solution:\n",
    "    def arrayPairSum(self, nums: List[int]) -> int:\n",
    "        sum = 0\n",
    "        nums.sort()\n",
    "\n",
    "        for i, n in enumerate(nums):\n",
    "            if i % 2 == 0:\n",
    "                sum += n\n",
    "\n",
    "        return sum"
   ]
  }
